        android:id="@+id/separatorView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/productTotalPrice_textView"
        android:layout_marginTop="3dp"
        android:background="@color/lightGrey"/>

</RelativeLayout>